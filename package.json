{
  "name": "socketto",
  "version": "1.0.2",
  "description": "Tiny wrapper for WebSocket Web API",
  "type": "module",
  "source": "src/index.ts",
  "main": "dist/index.cjs",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.module.js",
  "exports": {
    "require": "./dist/index.cjs",
    "default": "./dist/index.modern.js"
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "microbundle --no-sourcemap --generateTypes false --compress",
    "dev": "microbundle watch --no-sourcemap --generateTypes false",
    "test": "jest",
    "lint": "eslint --ext .ts"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karsanda/socketto.git"
  },
  "keywords": [
    "websocket",
    "websockets",
    "socket",
    "reconnect",
    "web",
    "client",
    "real-time",
    "tcp",
    "RFC-6455"
  ],
  "author": "Pinto Karsanda",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/karsanda/socketto/issues"
  },
  "homepage": "https://github.com/karsanda/socketto#readme",
  "devDependencies": {
    "@types/jest": "^27.5.2",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^27.5.1",
    "microbundle": "^0.14.2",
    "ts-jest": "^27.1.5",
    "typescript": "^4.7.4"
  }
}
