{
  "name": "socketto",
  "version": "1.0.4",
  "description": "Tiny wrapper for WebSocket Web API",
  "type": "module",
  "source": "src/index.ts",
  "main": "dist/index.cjs",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.module.js",
  "exports": {
    "require": "./dist/index.cjs",
    "default": "./dist/index.modern.js"
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "microbundle --no-sourcemap --generateTypes false --compress",
    "dev": "microbundle watch --no-sourcemap --generateTypes false",
    "test": "jest",
    "lint": "eslint --ext .ts"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karsanda/socketto.git"
  },
  "keywords": [
    "websocket",
    "websockets",
    "socket",
    "reconnect",
    "web",
    "client",
    "real-time",
    "tcp",
    "RFC-6455"
  ],
  "author": "Pinto Karsanda",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/karsanda/socketto/issues"
  },
  "homepage": "https://github.com/karsanda/socketto#readme",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "eslint": "^8.34.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.4.3",
    "jest-websocket-mock": "^2.4.0",
    "microbundle": "^0.15.1",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "jest-environment-jsdom": "^29.4.3"
  }
}
